% Des commandes LaTeX/Tex utiles pour écrire le style
\@ifpackageloaded{utilitairesltx}{}{\usepackage{utilitairesltx}}

% Dépendances: {biblatex}

\@ifpackageloaded{biblatex}{
  % citer tous les auteurs d'un article
  \newcommand{\citeallauthors}[1]{%
    \AtNextCite{\defcounter{maxnames}{99}}\citeauthor{#1}%
  }

  % citer un seul auteur
  \newcommand{\citefirstauthor}[1]{%
    \AtNextCite{\defcounter{maxnames}{1}}\citeauthor{#1}%
  }

  % citer le nom complet d'un auteur
  \newcommand{\fullnamecite}[1][999]{%
    \AtNextCite{\AtEachCitekey{\defcounter{maxnames}{#1}\DeclareNameAlias{labelname}{given-family}}}
  }
}{}

